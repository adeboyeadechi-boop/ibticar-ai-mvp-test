{
  "buildCommand": "npx prisma generate && npx prisma db push --accept-data-loss --skip-generate && npx tsx prisma/seed-prod.ts && next build",
  "installCommand": "npm install",
  "framework": "nextjs",
  "env": {
    "PRISMA_GENERATE_SKIP_AUTOINSTALL": "true"
  },
  "crons": [
    {
      "path": "/api/alerts/check",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/appointments/reminders",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/campaigns/send",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/marketplace/sync",
      "schedule": "0 */4 * * *"
    }
  ]
}
